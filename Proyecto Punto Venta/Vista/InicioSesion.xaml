<Window x:Class="Proyecto_Punto_Venta.Vista.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Punto_Venta.Vista"
        mc:Ignorable="d"
        Title="InicioSesion" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Inicia Sesion" HorizontalAlignment="Center" Margin="0,188,0,0" VerticalAlignment="Top" FontSize="36"/>

        <TextBox x:Name="txtUser" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="16" Margin="0,307,0,0"/>
        <TextBox x:Name="txtPsw" HorizontalAlignment="Center" Margin="0,390,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="240" FontSize="16"/>

        <Label Content="Usuario" HorizontalAlignment="Center" Margin="0,265,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.413,-0.63" Width="240" FontSize="16"/>
        <Label Content="Contraseña" HorizontalAlignment="Center" VerticalAlignment="Top" Width="240" Margin="0,352,0,0" FontSize="16"/>

        <Button Content="Iniciar Sesión" HorizontalAlignment="Center" Margin="0,441,0,0" VerticalAlignment="Top" Height="26" Width="140" Click="Button_Click"/>
    </Grid> 
</Window>
