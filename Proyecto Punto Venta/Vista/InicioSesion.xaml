<Window x:Class="Proyecto_Punto_Venta.Vista.InicioSesion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Proyecto_Punto_Venta.Vista"
        mc:Ignorable="d"
        Title="InicioSesion" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanMinimize"
        Background="#fffffe">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Background="#d1d1e9">
            <Label Content="Inicia Sesion" HorizontalAlignment="Center"  VerticalAlignment="Top" FontSize="36" Margin="0,40,0,0"/>

            <Label Content="Usuario" Width="240" FontSize="16" Margin="0,10"/>
            <TextBox x:Name="txtUser" Width="240" FontSize="16" Margin="0"/>

            <Label Content="Contraseña" Width="240" FontSize="16" Margin="30,10"/>
            <TextBox x:Name="txtPsw"  TextWrapping="Wrap" Width="240" FontSize="16" Margin="0,0,0,10"/>

            <Button Content="Iniciar Sesión" Height="26" Width="140" Click="Button_Click" Margin="0,10,0,40"
                    Style="{StaticResource ButonNormal}"/>
        </StackPanel>
    </Grid> 
</Window>
